<UserControl x:Class="DispatcherApp.View.DispatherAppUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DispatcherApp.View"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Label Content="Select element" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="100"/>
        <ComboBox x:Name="elementComboBox" ItemsSource="{Binding Path=Elements}" SelectedItem="{Binding Path=SelectedItem}" HorizontalAlignment="Left" Margin="10,41,0,0" VerticalAlignment="Top" Width="137" RenderTransformOrigin="-0.017,0.727"/>
        <DataGrid x:Name="dataGridElements" ItemsSource="{Binding Path=DataGridElements}" HorizontalAlignment="Left" Height="208" Margin="10,91,0,0" VerticalAlignment="Top" Width="497"/>
    </Grid>
</UserControl>
