<UserControl x:Class="DispatcherApp.View.OutputControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DispatcherApp.View"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition/>
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="20"/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Row="0" Grid.ColumnSpan="2" Background="#16BCB1">
            <TextBlock Text="Output" Foreground="White" Margin="7, 0, 0, 0"/>
        </Grid>
        <Button Grid.Row="0" Grid.Column="1" Command="{Binding CloseControlCommand}" CommandParameter="Output">X
        </Button>
        <ScrollViewer Grid.Column="1" Grid.Row="1" HorizontalScrollBarVisibility="Visible" Grid.RowSpan="2"/>
        <ScrollViewer Grid.Row="2" HorizontalScrollBarVisibility="Visible" Grid.ColumnSpan="2"/>
    </Grid>
</UserControl>
